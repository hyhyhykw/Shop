<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="162px">

    <ImageView
        android:id="@+id/iv_comment_head"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_marginLeft="30px"
        android:src="@drawable/ic_person" />

    <TextView
        android:id="@+id/tv_comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="16px"
        android:layout_toRightOf="@+id/iv_comment_head"
        android:text="静静的鱼"
        android:textColor="@color/drak_light"
        android:textSize="28px" />

    <TextView
        android:id="@+id/tv_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_comment_name"
        android:layout_marginRight="30px"
        android:text="23分钟前"
        android:textColor="@color/drak_light"
        android:textSize="28px" />

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_comment_head"
        android:layout_marginLeft="120px"
        android:layout_marginTop="12px"
        android:text="测试文本"
        android:textColor="@color/black"
        android:textSize="28px" />
</RelativeLayout>